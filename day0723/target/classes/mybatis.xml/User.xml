<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzz.dao.UserDao">
	<resultMap id="UserResult" type="com.zzz.entity.User">
		<id column="id" property="id"/>
		<result column="email" property="email"/>
		<result column="name" property="name"/>
		<result column="password" property="password"/>
		<result column="cid" property="cid"/>
		<result column="did" property="did"/>
		<result column="create_time" property="createTime"/>
		<result column="last_time" property="lastTime"/>
		<result column="statc" property="statc"/>
		<result column="user_img" property="userImg"/>
	</resultMap>
	<sql id="Base_Column_List">
		id,email,name,password,cid,did,create_time,last_time,statc,user_img
	</sql>
	<select id="findUserList" resultMap="UserResult">
	 SELECT <include refid="Base_Column_List" /> FROM USERS
	</select>
	<select id="selectUserByKey" resultMap="UserResult" parameterType="java.lang.String">
		SELECT  <include refid="Base_Column_List" /> FROM USERS WHERE 1=1
		<if test="id!=null">
			and id=#{id}
		</if>
		<if test="email!=null">
			and email=#{email}
		</if>
	</select>
</mapper>